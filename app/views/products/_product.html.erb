<div id="<%= dom_id product %>">

<div class="Product">

<p>
  <%= image_tag "image.png", height: "300px", width: "300px" %>
  </p>

  <div>
  <p class="product_details">
    <strong>Url :</strong>
    <%= product.url %>
  </p>

  <p class="product_details">
    <strong>Price :</strong>
    <%= product.price %>
  </p>

  <p class="product_details">
    <strong>Description :</strong>
    <%= product.description %>
  </p>
  </div>

</div>

</div>




<div class="gallery">
      <%= product.attachments.each do |index, image| %>
  <%= image_tag image.image.url, height: "300px", width: "300px", onclick: "openLightbox(); currentSlide(#{index})" %>
  <% end %>
    </div>
    
    <div id="lightbox" class="lightbox">
        <span class="close" onclick="closeLightbox()">&times;</span>
        <a class="prev" onclick="changeSlide(-1)">&#10094;</a>
        <a class="next" onclick="changeSlide(1)">&#10095;</a>
        
        <div class="lightbox-content">

                <%= product.attachments.each do |index, image| %>
            <div class="slide">
  <%= image_tag image.image.url %>
  <% end %>
            </div>
           
        </div>
    </div>









<style>

.Product {
  display:flex;
  align-items : center;
  gap : 5rem;
  border : 1px solid #000;
  padding : 1rem;
  margin : 3rem;
}

.product_details {
  font-size : 1.5rem; 
  color : gray;
}

.gallery {
  display:flex;
  justify-content:center;
  gap:1rem;
  margin-bottom:2rem;
}

.gallery img {
    cursor: pointer;
    transition: 0.3s;
    max-width: 20rem;
}

.gallery img:hover {
    opacity: 0.7;
}

.lightbox {
    display: none;
    position: fixed;
    z-index: 9999;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.8);
}

.lightbox-content {
    position: relative;
    margin: auto;
    padding: 0;
    width: 80%;
    max-width: 700px;
    display:flex;
    justify-content:center;
    align-items:center;
    position:absolute;
    top:1%;
    left:25%;
}

.slide {
    display: none;
}

.slide img {
    width: 100%;
    border-radius: 8px;
}

.prev, .next {
    cursor: pointer;
    position: absolute;
    top: 50%;
    width: auto;
    padding: 16px;
    margin-top: -22px;
    color: white;
    font-weight: bold;
    font-size: 20px;
    transition: 0.3s;
    border-radius: 0 3px 3px 0;
    user-select: none;
}

.next {
    right: 0;
    border-radius: 3px 0 0 3px;
}

.prev:hover, .next:hover {
    background-color: rgba(0, 0, 0, 0.8);
}

.close {
    position: absolute;
    top: 10px;
    right: 25px;
    color: white;
    font-size: 35px;
    font-weight: bold;
    transition: 0.3s;
}

.close:hover, .close:focus {
    color: #bbb;
    text-decoration: none;
    cursor: pointer;
}

.product_details strong {
  color : #000;
}

</style>


<script>

let slideIndex = 1;

function openLightbox() {
    document.getElementById('lightbox').style.display = 'block';
    showSlides(slideIndex);
}

function closeLightbox() {
    document.getElementById('lightbox').style.display = 'none';
}

function changeSlide(n) {
    showSlides(slideIndex += n);
}

function currentSlide(n) {
    showSlides(slideIndex = n);
}

function showSlides(n) {
    let i;
    const slides = document.getElementsByClassName('slide');
    if (n > slides.length) {slideIndex = 1}
    if (n < 1) {slideIndex = slides.length}
    for (i = 0; i < slides.length; i++) {
        slides[i].style.display = 'none';
    }
    slides[slideIndex - 1].style.display = 'block';
}
</script>